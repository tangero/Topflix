{
  "name": "topflix",
  "version": "1.0.0",
  "description": "Netflix Top 10 s hodnocením pro ČR",
  "main": "functions/api/top10.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev public --kv TOPFLIX_KV",
    "deploy": "wrangler pages deploy",
    "deploy:cron": "wrangler deploy --config wrangler-cron.toml",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:all": "vitest run --coverage",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": ["netflix", "top10", "tmdb", "csfd", "cloudflare"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0",
    "@cloudflare/vitest-pool-workers": "^0.1.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "miniflare": "^3.0.0",
    "playwright": "^1.40.0",
    "dotenv": "^16.3.0"
  }
}
